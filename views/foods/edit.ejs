<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/foods/edit.css" />
  <%- include('../partials/nav') %>
    <main>
      <h1>
        <%= title %>
      </h1>
      <form id="new-form" action="/foods/<%=food._id%>?_method=PUT" method="POST">
        <label for="name-input">Item Name:</label>
        <input type="text" name="name" id="name-input">
        <label for="totalCal-input">Total Calories:</label>
        <input type="text" name="totalCal" id="totalCal-input">

        <label for="netCarbs-input">Net Carbs:</label>
        <input type="text" name="netCarbs" id="netCarbs-input">

        <label for="protein-input">Protein:</label>
        <input type="text" name="protein" id="protein-input">
        <label for="fat-input">Fats:</label>
        <input type="text" name="fat" id="fat-input">
        <label for="serving-input">Servings:</label>
        <input type="text" name="serving" id="serving-input">
        <label for="date-input">Date: </label>
        <input type="datetime-local" name="date" id="date-input">

        <button type="submit">Save Food</button>
        <button onclick="window.location.href='/foods/show';">Go Back</button>
      </form>
    </main>

    <%- include("../partials/footer") %>